<div class="mx-5">
    <div class="card text-center">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{note.id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Title" value="{{note.title}}"
                        autofocus>
                </div>
                <div class="form-group">
                    <textarea type="text" name="description" class="form-control" placeholder="Description" cols=" 30"
                        rows="20">{{note.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-secondary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>